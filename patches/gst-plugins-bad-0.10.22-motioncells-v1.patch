+      }
+      if (m_MotionCells.size () == 0)
+        strncpy (m_motioncellsidxcstr, " ", m_motioncells_idx_count);
+
+      if (m_useAlpha && m_isVisible) {  ////FIXME: alpha blending has bug, it needs fix, cells position is wrong position
+        //image split and prepare for transparency image, and finally merge channels
+        IplImage *redchannel = cvCreateImage (m_frameSize, IPL_DEPTH_8U, 1);
+        IplImage *greenchannel = cvCreateImage (m_frameSize, IPL_DEPTH_8U, 1);
+        IplImage *bluechannel = cvCreateImage (m_frameSize, IPL_DEPTH_8U, 1);
+        IplImage *tmpCurFrame = cvCreateImage (m_frameSize, m_pcurFrame->depth,
+            m_pcurFrame->nChannels);
+        cvPyrDown (m_pcurFrame, tmpCurFrame);
+        transparentImage =
+            cvCreateImage (cvGetSize (tmpCurFrame), tmpCurFrame->depth,
+            tmpCurFrame->nChannels);
+        blendImages (tmpCurFrame, transparencyimg, 0.5, 0.5);
+        cvSplit (transparentImage, redchannel, greenchannel, bluechannel, 0);
+        IplImage *sumrednormal =
+            cvCreateImage (cvGetSize (p_frame), IPL_DEPTH_8U, 1);
+        IplImage *sumgreennormal =
+            cvCreateImage (cvGetSize (p_frame), IPL_DEPTH_8U, 1);
