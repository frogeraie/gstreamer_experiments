+      delete[]tmpstr;
+
+      if (mc_savefile && m_saveInDatafile) {
+        ret = saveMotionCells (timestamp_millisec);
+        if (ret != 0)
+          return ret;
+      }
+    }
+
+    framecntmotioncells++;
+    m_pprevFrame = cvCloneImage (m_pcurFrame);
