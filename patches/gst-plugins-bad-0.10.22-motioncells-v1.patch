+        } else if (m_isVisible) {
+          CvPoint pt1, pt2;
+          pt1.x = m_MotionCells.at (i).cell_pt1.x;
+          pt1.x *= 2;
+          pt1.y = m_MotionCells.at (i).cell_pt1.y;
