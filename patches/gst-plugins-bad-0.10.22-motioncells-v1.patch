+void
+MotionCells::blendImages (IplImage * p_actFrame, IplImage * p_rectFrame,
+    float p_alpha, float p_beta)
+{
+  CvSize actFrameSize = cvGetSize (p_actFrame);
+  CvSize rectFrameSize = cvGetSize (p_rectFrame);
+  if (actFrameSize.height != rectFrameSize.height &&
+      actFrameSize.width != rectFrameSize.width)
+    throw "not the same size";
+
+  IplImage *greyImage = cvCreateImage (cvGetSize (p_actFrame), IPL_DEPTH_8U, 1);
+
+  cvCvtColor (p_rectFrame, greyImage, CV_BGR2GRAY);
+
+  int height = p_actFrame->height;
+  int width = p_actFrame->width;
+  int step = p_actFrame->widthStep;
+  int greyStep = greyImage->widthStep;
+  int channels = p_actFrame->nChannels;
+  uchar *curImageData = (uchar *) p_actFrame->imageData;
+  uchar *recImageData = (uchar *) p_rectFrame->imageData;
+  uchar *transImageData = (uchar *) transparentImage->imageData;
+  uchar *greyImageData = (uchar *) greyImage->imageData;
+
+
+  for (int i = 0; i < height; i++)
+    for (int j = 0; j < width; j++)
+      for (int k = 0; k < channels; k++) {
+        if (greyImageData[i * greyStep + j] != 0) {
+          uchar curImgValue = curImageData[i * step + j * channels + k];
+          uchar recImgValue = recImageData[i * step + j * channels + k];
+          uchar transImgValue = (uchar) (curImgValue * p_alpha +
+              recImgValue * p_beta);
+          transImageData[i * step + j * channels + k] = transImgValue;
+        } else {
+          transImageData[i * step + j * channels + k] =
+              curImageData[i * step + j * channels + k];
+        }
+      }
+  cvReleaseImage (&greyImage);
+}
